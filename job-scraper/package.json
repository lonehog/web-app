{
  "name": "job-scraper",
  "private": true,
  "version": "1.0.0",
  "description": "Docker-deployable job-scraping web application (React + Express + SQLite + cron).",
  "type": "commonjs",
  "scripts": {
    "postinstall": "npm --prefix client install",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "client:build": "npm --prefix client run build",
    "dev": "concurrently \"npm:server:dev\" \"npm --prefix client run dev\"",
    "migrate": "node -e \"require('./server/db').migrate()\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.5.0",
    "cheerio": "^1.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.5.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.7"
  }
}
